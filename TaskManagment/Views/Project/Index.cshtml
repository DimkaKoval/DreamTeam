@model IEnumerable<TaskManagment.ViewModels.ProjectViewModel>
@using Services.Filters

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2>Projects</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectManagerUserName)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectManagerUserName)
                </td>
                <td>
                    <button class="btn btn-primary">
                        <a asp-controller="Team" asp-action="Index" asp-route-ProjectId="@item.Id">Teams</a>
                    </button>
                </td>
                <td>
                    <button class="btn btn-success">
                        <a asp-controller="CustomTask" asp-action="Index" asp-route-ProjectId="@item.Id">Tasks</a>
                    </button>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
